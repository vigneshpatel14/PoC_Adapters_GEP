{
  "version": 2,
  "name": "chat-gateway-poc",
  "framework": "express",
  "nodeVersion": "20.x",
  "buildCommand": "cd backend && npm install && npm run build && cd ../frontend && npm install && npm run build",
  "outputDirectory": "backend/dist",
  "regions": ["iad1"],
  "env": [
    "SLACK_BOT_TOKEN",
    "SLACK_APP_TOKEN", 
    "SLACK_SIGNING_SECRET",
    "AGENT_INVOKE_URL",
    "NODE_ENV"
  ],
  "envs": {
    "NODE_ENV": {
      "default": "production"
    }
  }
}

